<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imgtonyshark"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:src="@drawable/tony_shark"
        />

    <TextView
        android:id="@+id/txtname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tony Shark"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/imgtonyshark"/>



    <TextView
        android:id="@+id/txtemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtname"
        android:text="tonyshark@gmail.com"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/imgtonyshark"/>

    <TextView
        android:id="@+id/txtnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9579041984"
        android:layout_below="@+id/txtemail"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/imgtonyshark"/>

    <Button
        android:id="@+id/btnmoreinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="More Information"
        android:background="#c62828"
        android:layout_below="@+id/imgtonyshark"
        />

    <Button
        android:id="@+id/btnclickhere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Exit App"
        android:background="#33691e"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>